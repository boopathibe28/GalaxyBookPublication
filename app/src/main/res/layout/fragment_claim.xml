<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/rlyoutClaimList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/lyoutSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:background="@drawable/bg_order"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_search"
                    android:tint="@color/gray" />

                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/airbnbcereal_medium"
                    android:hint="Search"
                    android:padding="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/imgClear"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_close_round"
                    android:tint="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyoutFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/airbnbcereal_medium"
                                android:text="From Date"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/txt_dark_gray" />


                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/m_star"
                                android:visibility="gone"/>

                        </LinearLayout>


                        <EditText
                            android:id="@+id/edtFromDate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_28sdp"
                            android:background="@drawable/bg_edt_gray"
                            android:paddingEnd="@dimen/_3sdp"
                            android:paddingStart="@dimen/_3sdp"
                            android:fontFamily="@font/airbnbcereal_medium"
                            android:singleLine="true"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/gray"
                            android:visibility="gone"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/airbnbcereal_medium"
                                android:text="To Date"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/txt_dark_gray" />


                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/m_star"
                                android:visibility="gone"/>

                        </LinearLayout>


                        <EditText
                            android:id="@+id/edtToDate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_28sdp"
                            android:background="@drawable/bg_edt_gray"
                            android:paddingEnd="@dimen/_3sdp"
                            android:paddingStart="@dimen/_3sdp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/airbnbcereal_medium"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:visibility="gone"
                            android:background="@color/gray" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/airbnbcereal_medium"
                                android:text="Claim For"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/txt_dark_gray" />


                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/m_star"
                                android:visibility="gone"/>

                        </LinearLayout>


                        <EditText
                            android:id="@+id/edtClaimFor"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_28sdp"
                            android:background="@drawable/bg_edt_gray"
                            android:paddingEnd="@dimen/_3sdp"
                            android:paddingStart="@dimen/_3sdp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/airbnbcereal_medium"
                            android:singleLine="true"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/gray"
                            android:visibility="gone"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/txtSearch"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_search"
                                android:fontFamily="@font/airbnbcereal_medium"
                                android:gravity="center"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:text="Search"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/txtClear"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_clear"
                                android:fontFamily="@font/airbnbcereal_medium"
                                android:gravity="center"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:text="Clear"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvItemList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lyoutFilter"
                android:layout_above="@+id/lyoutBttomView"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtNoDataFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/airbnbcereal_light"
                android:text="No Data found."
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgCreateClaim"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/add"/>

            <LinearLayout
                android:id="@+id/lyoutBttomView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgPrevious"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_next_arrow"
                    android:padding="@dimen/_5sdp"
                    android:rotation="180"/>
                <TextView
                    android:id="@+id/txtLoadMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_accept"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/airbnbcereal_book"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Load More"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imgNext"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_next_arrow"
                    android:padding="@dimen/_5sdp"/>

            </LinearLayout>

        </RelativeLayout>








    </RelativeLayout>
</layout>