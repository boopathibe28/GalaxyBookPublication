<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GalaxyBookPublication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GalaxyBookPublication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GalaxyPub.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GalaxyPub.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RedAccent" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="DialogAnimationCombo">
        <item name="android:windowEnterAnimation">@anim/an_slide_right</item>
        <item name="android:windowExitAnimation">@anim/an_slide_left</item>
    </style>

</resources>